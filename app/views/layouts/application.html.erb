<!DOCTYPE html>
<html>

<head>
  <title><%= @title %>하비스트 테크놀로지스</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'wysihat', 'zlayer' %>
  <%= csrf_meta_tag %>
</head>

<body>
	<div id="wrapper">
		<div id="header">
			<div id="alert" class="fragile do_nullify"><%= flash_messages %></div>
			<%= render :partial => 'main/header' %>
		</div>

		<div id="section">
			<%= yield %>
		</div>

		<div id="footer">
			<ul id="family_sites" style="display:none" class="fragile do_hide">
				<li><%= link_to "하비스트 US", "http://www.harvesttech.com", :class => "link" %></li>
				<li><%= link_to "(주)미라", "http://mirarush.com", :class => "link" %></li>
			</ul>
			<%= link_to_function "", "$('family_sites').show()", :class => "family_site" %>
			<%= link_to_function image_tag('Index/Bottom/index_bottom_menu_01.png'), "zLayer.open('/privacy.html?s=auto')", :class => "overlay" %>
			<%= link_to_function image_tag('Index/Bottom/index_bottom_menu_02.png'), "zLayer.open('/agreement.html?s=auto')", :class => "overlay" %>
		</div>
	</div>

	<script>
    document.on("dom:loaded", function() {
			initSmartFocus();
			initLoadingImage();
			initFragileLayer();
			initControlPlaceHolder();
		});
	</script>
	
	<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-21587372-1']);
    _gaq.push(['_setDomainName', '.co.kr']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
</body>

</html>
