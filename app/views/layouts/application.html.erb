<!DOCTYPE html>
<html>

<head>
  <title><%= @title %>하비스트 테크놀로지스</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'wysihat', 'zlayer' %>
  <%= csrf_meta_tag %>
</head>

<body>
	<div id="wrapper">
		<div id="header">
			<div id="alert" class="fragile do_nullify"><%= flash_messages %></div>
			<%= render :partial => 'main/header' %>
		</div>

		<div id="section">
			<%= yield %>
		</div>

		<div id="footer"></div>
	</div>

	<script>
    document.on("dom:loaded", function() {
			initSmartFocus();
			initLoadingImage();
			initFragileLayer();
			initControlPlaceHolder();
		});
	</script>
	
	<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-21587372-1']);
    _gaq.push(['_setDomainName', '.co.kr']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  
</body>

</html>
